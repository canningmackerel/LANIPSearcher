<Window x:Class="LANIPSearcher.LANSearch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LANIPSearcher"
        mc:Ignorable="d"
        Title="LANSearch" Height="300" Width="300">
    <Grid Width="250" Height="250">
        <Button x:Name="SearchIP" Content="SearchIP" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="SearchLAN"/>
        <TextBox x:Name="SearchResult"  Text="{Binding ShowText, Mode=OneWay}" HorizontalAlignment="Left" Height="205" Margin="10,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="230" IsReadOnly="True" />
        <Button Content="Reset" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Width="75" Click="Reset"/>

    </Grid>
</Window>
